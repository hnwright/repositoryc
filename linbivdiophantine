#include <iostream>
#include <cmath>
int
Bezout (int x, int y)
{
  if (x == y || (x == 0 || y == 0))
    {
      return 1;
    }
  else
    {
      int u = x;
      int v = y;
      int j = 1;
      int k = 1 - x / y;
      int l = 1;
      int m;
      int n;
    erste:
      int i = x % y;
      if (i == 0)
	{
	  return j;
	}
      else
	{
	  int f = floor (x / y);
	  if (l == 1)
	    {
	      j = 1;
	      k = -f;
	      x = y;
	      y = i;
	      l++;
	    }
	  else if (l == 2)
	    {
	      m = j;
	      n = k;
	      j = -f;
	      k = 1 + j * k;
	      x = y;
	      y = i;
	      l++;
	    }
	  else
	    {
	      j = m - f * j;
	      k = n - f * k;
	      m = (m - j) / f;
	      n = (n - k) / f;
	      x = y;
	      y = i;
	    }
	  goto erste;
	}
    }
}

using namespace std;
int
gcd (int a, int b)
{
  if (b == 0)
    return a;
  return gcd (b, a % b);
}


int
main ()
{
  int x;
  int y;
  std::cout << "Please enter the value of x: ";
  std::cin >> x;
  std::cout << "Please enter the value of y: ";
  std::cin >> y;
  int sum;
euterpe:
  std::cout << "Please enter the desired sum: ";
  std::cin >> sum;
  std::cout << "\n";
  int g = gcd (x, y);
  if (sum % g != 0)
    {
      std::cout <<
	"Desired sum is not a multiple of the GCD. Please enter another value.\n";
      goto euterpe;
    }
  else
    {
      int a = sum / g * Bezout (x, y);
      int b = sum / g * Bezout (y, x);
      b = b % (x / g);
    clio:
      a = (sum - b * y) / x;
      if (abs (a - b) <= (x + y) / g)
	{
	  if (b >= 0)
	    {
	      std::cout << a << "x" << x << "+" << b << "x" << y << "=" <<
		sum;
	    }
	  else
	    {
	      std::cout << a << "x" << x << "-" << -b << "x" << y << "=" <<
		sum;
	    }
	}
      else
	{
	  if (a > b)
	    {
	      b = b - abs (x / g);
	    }
	  else
	    {
	      b = b + abs (x / g);
	    }
	  goto clio;
	}
    }
}
